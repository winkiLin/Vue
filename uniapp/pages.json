{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index2/index2",
			"style": {
				"navigationBarTitleText": "首页",
				"enablePullDownRefresh": false,
				"navigationStyle": "custom", //可以去掉小程序端的顶部导航
				"app-plus": {
					"titleNView": false // 去掉APP、H5的顶部导航
				}
			}

		},
		// navbar-自定义导航栏	
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app"
			}
		}, {
			"path": "pages/postDetail/postDetail",
			"style": {
				"navigationBarTitleText": "发布需求",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/getDetail/getDetail",
			"style": {
				"navigationBarTitleText": "添加需求",
				"enablePullDownRefresh": false
			}

		}
	    ,{
            "path" : "pages/fileList/fileList",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "文件列表",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#5555ff",
		"backgroundColor": "#F8F8F8"
	}
}
